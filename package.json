{
    "name": "pretty-checkbox-react",
    "version": "3.1.0",
    "description": "A set of React components build around Pretty Checkbox",
    "keywords": [
        "Pretty",
        "Radio",
        "Switch",
        "Pretty Checkbox",
        "Pretty Checkbox React",
        "pretty-checkbox",
        "pretty-checkbox-react",
        "Components",
        "input controls",
        "React",
        "React Hooks",
        "CSS",
        "Checkbox"
    ],
    "scripts": {
        "lint": "eslint \"src/**/*.{ts,tsx}\"",
        "test": "jest",
        "clean": "rimraf pkg/**",
        "build": "npm-run-all --parallel ts-check lint clean test -s build:pika",
        "build:pika": "pika build",
        "ts-check": "tsc --noEmit",
        "version": "npm run build"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/atomicpages/pretty-checkbox-react.git"
    },
    "author": "Dennis Thompson",
    "maintainers": [
        "Dennis Thompson"
    ],
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/atomicpages/pretty-checkbox-react/issues"
    },
    "homepage": "https://github.com/atomicpages/pretty-checkbox-react#readme",
    "@pika/pack": {
        "pipeline": [
            [
                "@pika/plugin-ts-standard-pkg",
                {
                    "args": [
                        "--target",
                        "es2019"
                    ]
                }
            ],
            [
                "@pika/plugin-build-web"
            ],
            [
                "@pika/plugin-build-node"
            ],
            [
                "pika-plugin-legacy-browser",
                {
                    "name": "PrettyCheckboxReact",
                    "format": "umd",
                    "minify": true,
                    "external": [
                        "react"
                    ],
                    "globals": {
                        "react": "React"
                    },
                    "sourcemap": true
                }
            ],
            [
                "pika-plugin-typedefs-to-flow"
            ]
        ]
    },
    "peerDependencies": {
        "pretty-checkbox": "^3.0.0",
        "react": "^16.9.0 || ^17.0.0",
        "react-dom": "^16.9.0 || ^17.0.0"
    },
    "devDependencies": {
        "@djthoms/eslint-config": "^3.0.0",
        "@djthoms/prettier-config": "^3.0.0",
        "@pika/pack": "^0.5.0",
        "@pika/plugin-build-node": "^0.9.2",
        "@pika/plugin-build-web": "^0.9.2",
        "@pika/plugin-ts-standard-pkg": "^0.9.2",
        "@testing-library/jest-dom": "^5.11.4",
        "@testing-library/react": "^11.0.0",
        "@testing-library/react-hooks": "^3.3.0",
        "@types/classnames": "^2.2.10",
        "@types/jest": "^26.0.10",
        "@types/node": "^14.6.0",
        "@types/react": "^17.0.0",
        "eslint": "^7.7.0",
        "flowgen": "^1.11.0",
        "husky": "^4.2.5",
        "jest": "^26.4.2",
        "jest-image-snapshot": "^4.0.2",
        "npm-run-all": "^4.1.5",
        "pika-plugin-legacy-browser": "^2.0.0",
        "pika-plugin-typedefs-to-flow": "^0.0.2",
        "prettier": "^2.1.1",
        "pretty-checkbox": "^3.0.3",
        "react": "^17.0.0",
        "react-dom": "^17.0.0",
        "react-test-renderer": "^17.0.0",
        "rimraf": "^3.0.2",
        "shx": "^0.3.2",
        "ts-jest": "^26.3.0",
        "typescript": "^4.0.2"
    },
    "dependencies": {
        "classnames": "^2.0.0",
        "nanoid": "^3.0.0",
        "react-merge-refs": "^1.1.0"
    },
    "prettier": "@djthoms/prettier-config"
}
