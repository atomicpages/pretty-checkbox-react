{
    "name": "pretty-checkbox-react",
    "version": "1.1.0",
    "description": "Quickly integrate pretty checkbox Components (checkbox, switch, radio) with React",
    "keywords": [
        "Pretty",
        "Radio",
        "Switch",
        "Pretty Checkbox",
        "pretty-checkbox",
        "Components",
        "React",
        "React.js",
        "React 16",
        "WebComponents",
        "CSS",
        "Checkbox"
    ],
    "main": "dist/pretty-checkbox-react.cjs.js",
    "module": "dist/pretty-checkbox-react.es.js",
    "browser": "dist/pretty-checkbox-react.umd.min.js",
    "scripts": {
        "build:flow": "flow focus-check src/components/** && flow-copy-source src dist",
        "lint": "eslint src/**",
        "pretest": "eslint src/**",
        "build": "rimraf dist/** && rollup -c rollup.config.js && npm run build:flow",
        "prepublish": "flow-copy-source src dist && rollup -c rollup.config.js",
        "test": "jest --silent"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm t",
            "pre-push": "npm t"
        }
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/atomicpages/pretty-checkbox-react.git"
    },
    "author": "Dennis Thompson <atomicpages@gmail.com>",
    "maintainers": [
        "Dennis Thompson <atomicpages@gmail.com>"
    ],
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/atomicpages/pretty-checkbox-react/issues"
    },
    "homepage": "https://github.com/atomicpages/pretty-checkbox-react#readme",
    "peerDependencies": {
        "pretty-checkbox": "^3.0.3",
        "react": "^16.7.0"
    },
    "devDependencies": {
        "@babel/core": "^7.5.5",
        "@babel/plugin-proposal-class-properties": "^7.5.5",
        "@babel/plugin-proposal-object-rest-spread": "^7.5.5",
        "@babel/preset-env": "^7.5.5",
        "@babel/preset-flow": "^7.0.0",
        "@babel/preset-react": "^7.0.0",
        "@testing-library/jest-dom": "^4.0.0",
        "@testing-library/react": "^9.1.3",
        "babel-core": "^7.0.0-bridge.0",
        "babel-eslint": "^10.0.2",
        "babel-jest": "^24.9.0",
        "coveralls": "^3.0.6",
        "eslint": "^6.1.0",
        "eslint-config-prettier": "^6.0.0",
        "eslint-plugin-flowtype": "^4.2.0",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-prettier": "^3.1.0",
        "eslint-plugin-react": "^7.14.3",
        "flow": "^0.2.3",
        "flow-bin": "^0.110.0",
        "flow-copy-source": "^2.0.7",
        "flow-coverage-report": "^0.6.1",
        "husky": "^3.0.4",
        "jest": "^24.9.0",
        "jest-dom": "^4.0.0",
        "prettier": "^1.18.2",
        "pretty-checkbox": "^3.0.3",
        "react": "^16.9.0",
        "react-docgen": "^4.1.0",
        "react-dom": "^16.9.0",
        "rimraf": "^3.0.0",
        "rollup": "^1.19.4",
        "rollup-plugin-babel": "^4.3.3",
        "rollup-plugin-commonjs": "^10.0.2",
        "rollup-plugin-json": "^4.0.0",
        "rollup-plugin-node-resolve": "^5.2.0",
        "rollup-plugin-uglify": "^6.0.2"
    },
    "dependencies": {
        "classnames": "^2.2.6",
        "hoist-non-react-statics": "^3.3.0"
    },
    "jest": {
        "collectCoverage": true,
        "coverageDirectory": "<rootDir>/coverage",
        "testPathIgnorePatterns": [
            "/node_modules/",
            "<rootDir>/docs/.cache"
        ],
        "coverageReporters": [
            "json",
            "lcov",
            "text",
            "clover",
            "html"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 90,
                "functions": 95,
                "lines": 90,
                "statements": 90
            }
        }
    }
}
